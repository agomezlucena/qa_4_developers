	"item": [
		{
			"name": "get all games",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let schema ={\r",
							"  \"$schema\": \"http://json-schema.org/draft-04/schema#\",\r",
							"  \"type\": \"object\",\r",
							"  \"properties\": {\r",
							"    \"games\": {\r",
							"      \"type\": \"array\",\r",
							"      \"items\": [\r",
							"        {\r",
							"          \"type\": \"object\",\r",
							"          \"properties\": {\r",
							"            \"id\": {\r",
							"              \"type\": \"string\"\r",
							"            },\r",
							"            \"name\": {\r",
							"              \"type\": \"string\"\r",
							"            },\r",
							"            \"price\": {\r",
							"              \"type\": \"number\"\r",
							"            }\r",
							"          },\r",
							"          \"required\": [\r",
							"            \"id\",\r",
							"            \"name\",\r",
							"            \"price\"\r",
							"          ]\r",
							"        }\r",
							"      ]\r",
							"    }\r",
							"  },\r",
							"  \"required\": [\r",
							"    \"games\"\r",
							"  ]\r",
							"};\r",
							"\r",
							"tv4.addSchema('gameSchema',schema);\r",
							"\r",
							"pm.test(\"response has to have a 200 status\",()=>{\r",
							"    pm.response.to.have.status(200)\r",
							"})\r",
							"pm.test(\"response has to have a json body\",()=>{\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"})\r",
							"pm.test(\"response must match with given json schema\",()=>{\r",
							"    pm.expect(tv4.validate(pm.response.json(),schema)).to.be.true;\r",
							"})\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "localhost:8080/games",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"games"
					]
				}
			},
